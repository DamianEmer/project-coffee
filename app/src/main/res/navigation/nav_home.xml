<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dezc.coffeesaleapp.ui.views.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginActivity2"
            app:destination="@id/loginActivity" />
        <action
            android:id="@+id/action_homeFragment_to_statusOrderFragment"
            app:destination="@id/statusOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.dezc.coffeesaleapp.ui.views.maps.MapsFragment"
        android:label="MapsFragment" >
        <action
            android:id="@+id/action_mapsFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/action_mapsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.dezc.coffeesaleapp.ui.views.payment.PaymentFragment"
        android:label="PaymentFragment" >
        <action
            android:id="@+id/action_paymentFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_paymentFragment_to_statusOrderFragment2"
            app:destination="@id/statusOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailProductFragment"
        android:name="com.dezc.coffeesaleapp.ui.views.product.DetailProductFragment"
        android:label="DetailProductFragment" >
        <action
            android:id="@+id/action_detailProductFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.dezc.coffeesaleapp.ui.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/statusOrderFragment"
        android:name="com.dezc.coffeesaleapp.ui.views.statusOrder.StatusOrderFragment"
        android:label="StatusOrderFragment" >
        <action
            android:id="@+id/action_statusOrderFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>
